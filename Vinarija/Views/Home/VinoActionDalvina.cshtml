@{
    ViewBag.Title = "Dalvina Tikves";
}
<html>
<head>
    <title>
        Vino Dalvina
    </title>
    <style>
        #myImg {
            border-radius: 5px;
            transition: 0.3s;
        }
            #myImg:hover {
                opacity: 0.7;
                transform: scale(1.5);
            }
    </style>
</head>
<body>
    <div class="row">
        <div class="col-md-3">
            <h3>Dalvina</h3>
        </div>
    </div>
    <div class="row">
        @foreach (var obj in ViewData.Model)
        {
            if (obj.ProizvoditelVino.ProizvoditelVinoIme == "Dalvina")
            {
                <div class="col-md-3">
                    <div class="thumbnail">
                        @if (@obj.ImeVino == "Dalvina Crveno")
                        {
                            <img id="myImg" src="~/Content/pictures/d.png" alt="Dalvina Red" width="200px" height="200px" />
                        }
                        else if (@obj.ImeVino == "Dalvina Crno")
                        {
                            <img id="myImg" src="~/Content/pictures/d1.png" alt="Dalvina Black" width="200px" height="200px" />
                        }
                        else if (@obj.ImeVino == "Dalvina Roze")
                        {
                            <img id="myImg" src="~/Content/pictures/d2.jpg" alt="Dalvina Roze" width="200px" height="200px" />
                        }
                        else if (@obj.ImeVino == "Dalvina Belo")
                        {
                            <img id="myImg" src="~/Content/pictures/d3.jpg" alt="Dalvina Belo" width="200px" height="200px" />
                        }
                        <div class="caption">
                            <p>@obj.ImeVino</p>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
    <div class="row">
        <div class="col-md-3">
                <a class="btn btn-default" href="/Sostojki/IndexDalvina">Sostojki</a>
        </div>
    </div>
</body>
</html>




